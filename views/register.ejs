<%- include('head') %>

<body>

    <!-- Section: Design Block -->
    <section class="text-center">
        <!-- Background image -->
        <div class="p-5 bg-image" style="
        background-image: url('/images/cat2.jpeg');
        background-position: center;
        height: 500px;
        background-repeat: no-repeat;
        background-size: 100%">
        </div>
        <!-- Background image -->

        <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
            <div class="card-body py-5 px-md-5">

                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <h2 class="fw-bold mb-5">สมัครสมาชิก</h2>

                        <% if(register.length > 0) {%> 
                        <div class="alert alert-danger text-start">
                            <strong>ข้อผิดพลาด!</strong> <%= register %>
                          </div>
                     <%} %>
                        <form action="/register" method="POST">

                          <div class="form-outline mb-4 text-start">
                            <input name="email" type="email" id="form3Example4" class="form-control fs-5"
                                placeholder="อีเมล" value="a@gmail.com" />
                        </div>
                            <div class="row text-start">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input name="password" type="password" id="form3Example1" class="form-control fs-5"
                                            placeholder="รหัสผ่าน" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input name="confirmpass" type="password" id="form3Example2"
                                            class="form-control fs-5" placeholder="ยืนยันรหัสผ่าน" />
                                    </div>
                                </div>
                            </div>
                            <div class="row text-start">
                                <div class="col-md-6 mb-4 ">
                                    <div class="form-outline">
                                        <input name="firstname" type="text" id="form3Example1" class="form-control fs-5"
                                            placeholder="ชื่อ" />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input name="lastname" type="text" id="form3Example2" class="form-control fs-5"
                                            placeholder="นามสกุล" />
                                    </div>
                                </div>
                            </div>
                        

                            <!-- Submit button -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btnorg mb-4 fs-5">
                                    สมัครสมาชิก
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section: Design Block -->

  
    <!-- ใส่ที่ footer -->
    <%- include('footer') %>
</body> 